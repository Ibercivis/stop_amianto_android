<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ibercivis.stopamianto.Report"
    android:background="@color/dark">

    <LinearLayout
        android:id="@+id/centro_logos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="18dp"
        >

        <ImageView
            android:id="@+id/logologin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_stop_amianto"
            android:transitionName="logo_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5">

            <TextView
                android:id="@+id/titulo_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="-12dp"
                android:fontFamily="@font/avenir"
                android:text="STOP"
                android:textAlignment="center"
                android:textColor="@color/secondaryColor"
                android:textSize="38sp" />

            <TextView
                android:id="@+id/titulo_amianto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir"
                android:text="AMIANTO"
                android:textAlignment="center"
                android:textColor="@color/secondaryColor"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/zona_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/centro_logos"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/user_mock"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="250dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="250dp">

                    <ImageView
                        android:background="@color/black"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_person_outline_24"
                        android:transitionName="logo_image" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/user_usernametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="@string/user2"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:transitionName="logo_text" />


        </LinearLayout>


        <Button
            android:id="@+id/reporte_logoutBtn"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_shape"
            android:layout_marginHorizontal="12dp"
            android:text="@string/btn_exit"
            android:textColor="@color/textoClaro" />

    </LinearLayout>

    <TextView
        android:id="@+id/user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zona_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/user1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:transitionName="logo_text" />

    <TextView
        android:id="@+id/txt_no_observaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/box_shape"
        android:gravity="center"
        android:padding="60dp"
        android:text="@string/user3"
        android:textColor="@color/textoClaro"
        android:textSize="16sp"
        android:transitionName="logo_text"
        android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/dark"
            android:layout_below="@id/user_title"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp">



                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerobservaciones"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="52dp"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/cargando"
            android:layout_width="match_parent"
            android:layout_height="770dp"
            android:background="#A4363030"
            android:gravity="center"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/marcobotonsolido">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popup_wait"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/textoClaro"/>

                <ProgressBar
                    android:layout_marginTop="8dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:progressTint="@color/textoClaro"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/marco_visualizar_foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A4363030"
            android:gravity="center"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/marcobotonsolido">
                <ImageView
                    android:id="@+id/foto_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                </ImageView>

                <Button
                    android:id="@+id/foto_volver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volver"
                    android:layout_margin="8dp"
                    android:paddingHorizontal="20dp"
                    android:background="@color/colorBottonUp"
                    android:textColor="#fff"/>

            </LinearLayout>


        </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigator"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:itemBackground="@color/black"
        app:itemTextColor="@drawable/selector_menu_bottom"
        app:itemIconTint="@drawable/selector_menu_icon"
        app:menu="@menu/menu_bottom"
        android:layout_alignParentBottom="true"/>

    </RelativeLayout>

